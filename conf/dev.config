params {

    // The input CSV sample file (the study id cannot start with 'XBS_REF_')
    //NOTE: The samplesheet should have the following fields [study, sample, library, attempt, flowcell, lane, index_sequence, r1, r2]
    //NOTE: Most of these parameters are used to create unique_id in XBS_main.py
    input_samplesheet = "${projectDir}/data/mock_data/input_samplesheet.csv"

    // The directory to which all output files should be written
    outdir = "${projectDir}/results_mock"

    // The name of the output VCF file
    // NOTE: This parameter is used to derive the JOINT_NAME in XBS_main.py
    vcf_name = "joint"

    //Use this flag to skip the final merge
    skip_merge = false

    //The median coverage required to process the sample
    median_coverage_cutoff = 10

    //The breadth of coverage required to process the sample
    breadth_of_coverage_cutoff = 0.90

    //The relative abundunce of the majority strain required to process the sample
    rel_abundance_cutoff = 0.80

    //The maximum fraction of NTM DNA allowed to process the sample
    ntm_fraction_cutoff = 0.20

    //The database to use for resistance calling
    resistance_db="${projectDir}/data/mock_data/resistance_db_v1"

    //The GVCF file containing the positive controls. All samples in this file must start with \'XBS_REF_\'
    ref_gvcf="${projectDir}/data/mock_data/reference_gvcfs_v02.g.vcf.gz"

    //The GVCF file containing the positive study specific controls. To be used when bulk analysis is impossible (for real time analysis of samples). All samples in this file must start with \'STUDY_REF\'
    ref_gvcf_study=""


    // dbsnp_vcf = "${projectDir}/data/mock_data/tbvar.v3.vcf"
    ref_fasta = "${projectDir}/data/mock_data/NC-000962-3-H37Rv.fa"
    // rrna_list = "${projectDir}/data/mock_data/rRNA.list"
    // adapter_path = "${projectDir}/data/mock_data/TruSeq3-PE-2"


    coll2014_vcf  = "${projectDir}/Coll2014.UVPapproved.rRNAexcluded.vcf.gz"
    coll2018_vcf = "${projectDir}/Coll2018.UVPapproved.rRNAexcluded.vcf.gz"
    napier2020_vcf = "${projectDir}/Napier2020.UVPapproved.rRNAexcluded.vcf.gz"
    benavente2015_vcf = "${projectDir}/Benavente2015.UVPapproved.rRNAexcluded.vcf.gz"


    GATK_HAPLOTYPE_CALLER {
        results_dir = "${params.outdir}/gatk4/haplotype_caller"
        save_mode = 'copy'
        should_publish = true

        arguments = " -ploidy 1 --read-filter MappingQualityNotZeroReadFilter -G StandardAnnotation -G AS_StandardAnnotation "
    }

    GATK_HAPLOTYPE_CALLER_MINOR_VARIANTS {
        results_dir = "${params.outdir}/gatk4/haplotype_caller_minor_variants"
        save_mode = 'copy'
        should_publish = true

        arguments = " -ploidy 1 --minimum-mapping-quality 60 --min-base-quality-score 20 --read-filter MappingQualityNotZeroReadFilter -G StandardAnnotation --output-mode EMIT_ALL_ACTIVE_SITES "
    }


    LOFREQ_CALL_NTM {
        results_dir = "${params.outdir}/lofreq/call_ntm/"
        save_mode = 'copy'
        should_publish = true

        region = "1472307-1472307"
        arguments = " -m 60 -Q 20 -a 1 "
    }


    LOFREQ_INDELQUAL {
        results_dir = "${params.outdir}/lofreq/indelqual/"
        save_mode = 'copy'
        should_publish = true

        arguments = "-m 60"
    }

    LOFREQ_CALL {
        results_dir = "${params.outdir}/lofreq/call/"
        save_mode = 'copy'
        should_publish = true

        arguments = "-m 60"
    }

    DELLY_CALL {
        results_dir = "${params.outdir}/delly/call/"
        save_mode = 'copy'
        should_publish = true

        arguments = "-u 30"
    }



    LOFREQ_FILTER {
        results_dir = "${params.outdir}/lofreq/filter/"
        save_mode = 'copy'
        should_publish = true

        arguments = "-a 60"
    }




    QUANTTB_QUANT {
        results_dir = "${params.outdir}/quanttb/quant/"
        save_mode = 'copy'
        should_publish = true
    }


    GATK_COMBINE_GVCFS {
        results_dir = "${params.outdir}/gatk4/combine_gvcfs/"
        save_mode = 'copy'
        should_publish = true

        arguments = " -G StandardAnnotation -G AS_StandardAnnotation "

    }

    GATK_GENOTYPE_GVCFS {
        results_dir = "${params.outdir}/gatk4/genotype_gvcfs"
        save_mode = 'copy'
        should_publish = true

        arguments = " -G StandardAnnotation -G AS_StandardAnnotation --sample-ploidy 1 "
    }


    SNPEFF {
        results_dir = "${params.outdir}/snpeff"
        save_mode = 'copy'
        should_publish = true
    }


    GATK_INDEX_FEATURE_FILE {
        results_dir = "${params.outdir}/gatk4/index_feature_file"
        save_mode = 'copy'
        should_publish = true
    }

    GATK_SELECT_VARIANTS__SNP {
        results_dir = "${params.outdir}/gatk4/select_variants"
        save_mode = 'copy'
        should_publish = true

        type= 'SNP'
        arguments = " --remove-unused-alternates --exclude-non-variants "
    }

    GATK_SELECT_VARIANTS__INDEL {
        results_dir = "${params.outdir}/gatk4/select_variants"
        save_mode = 'copy'
        should_publish = true

        type= 'INDEL'
        arguments = " --remove-unused-alternates --exclude-non-variants "
    }


    GATK_VARIANT_RECALIBRATOR {
        results_dir = "${params.outdir}/gatk4/variant_recalibrator"
        save_mode = 'copy'
        should_publish = true
        mode = 'SNP'
        arguments = " --use-allele-specific-annotations \
                      -an AS_QD \
                      -an DP \
                      -an AS_MQ \
                      --target-titv 1.7 \
                      --truth-sensitivity-tranche 100.0 \
                      --truth-sensitivity-tranche 99.9 \
                      --truth-sensitivity-tranche 99.8 \
                      --truth-sensitivity-tranche 99.7 \
                      --truth-sensitivity-tranche 99.6 \
                      --truth-sensitivity-tranche 99.5 \
                      --truth-sensitivity-tranche 99.4 \
                      --truth-sensitivity-tranche 99.3 \
                      --truth-sensitivity-tranche 99.2 \
                      --truth-sensitivity-tranche 99.1 \
                      --truth-sensitivity-tranche 99.0 \
                      --max-gaussians 4 \
                      -mq-cap 60"
    }






}


