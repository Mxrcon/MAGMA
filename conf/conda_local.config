params {
    conda_envs_location = "${projectDir}/conda_envs"
}

process {

    withName:
    'GATK.*|LOFREQ.*|DELLY.*|TBPROFILER.*|MULTIQC.*|FASTQC.*|UTILS.*' {
        #environment does not yet exist:
        #conda = "${params.conda_envs_location}/xbs-nf-env-1"
